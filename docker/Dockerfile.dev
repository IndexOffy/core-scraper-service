FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

WORKDIR /app
RUN apt-get update && apt-get install -y \
    python3.13 \
    python3.13-dev \
    python3-pip \
    python3-venv \
    wget \
    curl \
    unzip \
    git \
    vim \
    xvfb \
    libgtk-3-0 \
    libdbus-glib-1-2 \
    libxt6 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libasound2 \
    libpangocairo-1.0-0 \
    libatk1.0-0 \
    libcairo-gobject2 \
    libgdk-pixbuf2.0-0 \
    libxss1 \
    libgbm1 \
    firefox \
    && rm -rf /var/lib/apt/lists/*

RUN ln -s /usr/bin/python3.13 /usr/bin/python
RUN pip3 install --upgrade pip setuptools wheel poetry

COPY pyproject.toml poetry.lock /app/
RUN poetry config virtualenvs.create false && \
    poetry install --no-interaction --no-root --only=main

COPY app /app/app
COPY lambda_handler.py /app/

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV SCOPE=development

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "app.__main__:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
