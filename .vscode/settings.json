{
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit",
      "source.fixAll.ruff": "explicit"
    },
    "editor.rulers": [79],
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.lint.enable": true,
  "ruff.format.enable": true,
  "ruff.configFile": "${workspaceFolder}/.code_quality/ruff.toml",
  "black-formatter.args": [
    "--config",
    "${workspaceFolder}/.code_quality/black.toml"
  ],
  "isort.args": [
    "--settings-file",
    "${workspaceFolder}/.code_quality/isort.cfg"
  ],
  "mypy-type-checker.args": [
    "--config-file",
    "${workspaceFolder}/.code_quality/mypy.ini"
  ],
  "mypy-type-checker.reportingScope": "workspace",
  "flake8.args": [
    "--config=${workspaceFolder}/.code_quality/.flake8"
  ],
  "files.associations": {
    "*.toml": "toml",
    "*.cfg": "ini"
  },
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "none",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true
}
